<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PracticalTest02MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server"
        android:textAlignment="center"
        android:textSize="50dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="3">


        <EditText
            android:id="@+id/sv_port_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:hint="   Port   "
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:id="@+id/start_server_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Server"
            android:layout_row="0"
            android:layout_column="1" />

    </GridLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Client"
        android:textAlignment="center"
        android:textSize="50dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3">

        <EditText
            android:id="@+id/addresss_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="  Address  "
            android:layout_row="0"
            android:layout_column="0" />


        <EditText
            android:id="@+id/client_port_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:hint="  Port  "
            android:layout_row="0"
            android:layout_column="1" />

        <Spinner
            android:id="@+id/type_info_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/info_types"
            android:spinnerMode="dropdown"
            android:layout_row="1"
            android:layout_column="1" />

        <EditText
            android:id="@+id/city_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="    City    "
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:id="@+id/get_weather_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Weather"
            android:layout_row="1"
            android:layout_column="2" />

    </GridLayout>
    <TextView
        android:id="@+id/weather_forecast_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"/>
</LinearLayout>
